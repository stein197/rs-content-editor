{
    "name": "rs/content-editor",
	"version": "1.0.0",
    "description": "JSON content editor for ROCKSTONE",
	"scripts": {
		"server": "php -S localhost:80 -t public"
	},
	"scripts-descriptions": {
		"server": "Runs PHP development HTTP server on 80 port. PHP should be available through the PATH variable as well as 80 port"
	},
	"config": {
		"process-timeout": 0
	},
    "type": "project",
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        },
		"files": [
			"src/functions.php"
		]
    },
    "authors": [
        {
            "name": "Nail' Gafarov",
            "email": "nil20122013@gmail.com"
        }
    ],
    "require": {
		"ext-mbstring": "*",
		"ext-mysqli": "*",
        "php-di/php-di": "6.3.5",
        "nikic/fast-route": "1.3.0",
        "guzzlehttp/psr7": "2.1.0"
    }
}
